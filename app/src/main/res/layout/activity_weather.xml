<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/weatherSrcol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/cloudy_back"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="140dp"
                android:src="@drawable/place"
                android:id="@+id/place"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/place"
                android:textSize="16sp"
                android:id="@+id/locate"
                android:text="杭州"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/place"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="108sp"
                android:id="@+id/degree"
                android:textStyle="bold"
                android:text="24°"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/cloud"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/degree"
                android:id="@+id/wea_pic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/wea_text"
                android:layout_toRightOf="@id/wea_pic"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/degree"
                android:gravity="center"
                android:textSize="16sp"
                android:text="多云"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/temp"
                android:layout_toRightOf="@id/wea_text"
                android:layout_marginLeft="8dp"
                android:layout_below="@id/degree"
                android:gravity="center"
                android:textSize="16sp"
                android:text="20°- 30°"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/line"
                android:layout_height="1dp"
                android:src="@drawable/back_line"
                android:layout_below="@+id/wea_text"
                android:layout_marginTop="32dp"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/today"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/line"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="今天"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/cloud"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/today"
                android:id="@+id/today_weather"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/today_maxtemp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/today_weather"
                android:gravity="center"
                android:textSize="16sp"
                android:text="30°"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/today_mintemp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/today_maxtemp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="20°"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/tomorrow"
                android:layout_toRightOf="@+id/today"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/line"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="周二"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/sun"
                android:layout_toRightOf="@id/today_weather"
                android:layout_marginLeft="45dp"
                android:layout_below="@+id/tomorrow"
                android:id="@+id/tomorrow_weather" />
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/tomorrow_maxtemp"
                android:layout_toRightOf="@id/today_maxtemp"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/tomorrow_weather"
                android:gravity="center"
                android:textSize="16sp"
                android:text="33°"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/tomorrow_mintemp"
                android:layout_toRightOf="@id/today_mintemp"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/tomorrow_maxtemp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="24°"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/third"
                android:layout_toRightOf="@+id/tomorrow"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/line"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="周三"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/cloud"
                android:layout_toRightOf="@id/tomorrow_weather"
                android:layout_marginLeft="45dp"
                android:layout_below="@+id/third"
                android:id="@+id/third_weather" />
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/third_maxtemp"
                android:layout_toRightOf="@id/tomorrow_maxtemp"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/third_weather"
                android:gravity="center"
                android:textSize="16sp"
                android:text="31°"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/third_mintemp"
                android:layout_toRightOf="@id/tomorrow_mintemp"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/third_maxtemp"
                android:gravity="center"
                android:textSize="16sp"

                android:text="22°"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/forth"
                android:layout_toRightOf="@+id/third"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/line"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="周四"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/cloud_rain"
                android:layout_toRightOf="@id/third_weather"
                android:layout_marginLeft="45dp"
                android:layout_below="@+id/forth"
                android:id="@+id/forth_weather" />
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/forth_maxtemp"
                android:layout_toRightOf="@id/third_maxtemp"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/forth_weather"
                android:gravity="center"
                android:textSize="16sp"
                android:text="27°"/>
            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:id="@+id/forth_mintemp"
                android:layout_toRightOf="@id/third_mintemp"
                android:layout_marginLeft="45dp"
                android:layout_below="@id/forth_maxtemp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="21°"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/line2"
                android:layout_height="1dp"
                android:src="@drawable/back_line2"
                android:layout_below="@+id/today_mintemp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="空气湿度与适宜度"
                android:textColor="#54000000"
                android:id="@+id/air"
                android:layout_below="@id/line2"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/line3"
                android:layout_height="1dp"
                android:src="@drawable/back_line2"
                android:layout_below="@+id/air"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:id="@+id/humText"
                android:text="空气湿度" />
            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_below="@id/humText"
                android:id="@+id/airFrame">
                <ArcProcess.ArcProgress
                    android:id="@+id/air_hum_arc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:radius="74dp"
                    app:arcCapRound="true"
                    app:degree="40"
                    app:progressStyle="tick"
                    app:progressColor="#51DF80"
                    app:tickDensity="3"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:progress="50"/>
                <TextView
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:id="@+id/hum_percent"
                    android:textSize="32sp"
                    android:layout_marginTop="68dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    />
            </FrameLayout>
            <TextView
                android:layout_toRightOf="@id/airFrame"
                android:layout_below="@id/humText"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text="天气热，注意涂抹防晒"
                android:id="@+id/wear_cloth"
                android:textSize="16sp"
                android:gravity="center_vertical|left"
                />
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/line4"
                android:layout_height="1dp"
                android:src="@drawable/back_line2"
                android:layout_below="@+id/airFrame"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="风力与风向"
                android:textColor="#54000000"
                android:id="@+id/wind"
                android:layout_below="@id/line4"
                android:layout_marginTop="8dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/line5"
                android:layout_height="1dp"
                android:src="@drawable/back_line2"
                android:layout_below="@+id/wind"
                android:layout_marginTop="8dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/wind"
                android:id="@+id/wind_pic"
                android:layout_below="@id/line5"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="风向        东南风"
                android:textColor="#54000000"
                android:id="@+id/wind_direction"
                android:layout_below="@id/line5"
                android:layout_toRightOf="@id/wind_pic"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="48dp"
                android:textSize="16sp"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="风力        3-4级"
                android:textColor="#54000000"
                android:id="@+id/wind_power"
                android:layout_below="@id/wind_direction"
                android:layout_toRightOf="@id/wind_pic"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="48dp"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>