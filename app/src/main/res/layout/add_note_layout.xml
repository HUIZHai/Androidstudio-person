<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#363636">
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/arrow_back"
                android:id="@+id/add_cancle"
                android:background="#00000000"/>
            <TextView
                android:layout_width="264dp"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/add_cancle"
                android:gravity="center"
                android:text="新建活动"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/schedule_title"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/schedule_title"
                android:src="@drawable/arrows_check"
                android:id="@+id/add_save"
                android:background="#00000000"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/add_money"
            android:layout_width="328dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="left"
            android:text="0.00"
            android:textSize="48sp"
            android:textColor="#ff0000"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"/>
        <TextView
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:layout_marginLeft="16dp"
            android:text="账户类型"
            android:textSize="12sp"
            android:textColor="#87ffffff"/>
        <TextView
            android:layout_width="324dp"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:layout_marginLeft="20dp"
            android:text="现金账户"
            android:textSize="16sp"
            android:textColor="#54ffffff" />
        <Spinner
            android:layout_width="328dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/spin_income"
            android:background="#27ffffff"
            android:entries="@array/spingarr">
        </Spinner>
        <EditText
            android:id="@+id/add_notes"
            android:layout_width="328dp"
            android:layout_height="60dp"
            android:gravity="center|left"
            android:layout_marginLeft="16dp"
            android:hint="备注..."
            android:selectAllOnFocus="true"
            android:textColor="#87FFFFFF"
            android:textColorHint="#54FFFFFF"/>

        <LinearLayout
            android:layout_marginTop="220dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
